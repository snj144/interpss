<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:p="http://www.springframework.org/schema/p"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="cmlScriptingStabilizer" 
	  	class="org.interpss.dstab.script.cml.CMLScriptingStabilizer"
	    scope="prototype"	
	    p:name="CML Scripting Stabilizer"
	    p:category="InterPSS"
	    p:desc="InterPSS CML scripting stabilizer implementation" />

	<bean id="simpleStabilizer" 
	      class="org.interpss.dstab.control.pss.simple.SimpleStabilizer"
	      scope="prototype"	
	    p:name="Simple Stabilizer"
	    p:category="InterPSS"
	    p:desc="An InterPSS simple stabilizer implementation" />
	
	<bean id="ieee1992PSS1AStabilizer" 
	      class="org.interpss.dstab.control.pss.ieee.y1992.pss1a.Ieee1992PSS1AStabilizer"
	      scope="prototype"	
	    p:name="IEEE-1992 PSS1A"
	    p:category="IEEE-1992"
	    p:desc="An IEEE-1992 PSS1A stabilizer implementation" />

	<bean id="ieee1992PSS2AStabilizer" 
	      class="org.interpss.dstab.control.pss.ieee.y1992.pss2a.Ieee1992PSS2AStabilizer"
	      scope="prototype"	
	    p:name="IEEE-1992 PSS2A"
	    p:category="IEEE-1992"
	    p:desc="An IEEE-1992 PSS2A stabilizer implementation" />

	<bean id="stabilizerList" 
	      class="java.util.ArrayList"
	      scope="singleton">	
		<constructor-arg>
			<list>
				<ref bean="cmlScriptingStabilizer"/>
				<ref bean="simpleStabilizer"/>
				<ref bean="ieee1992PSS1AStabilizer"/>
				<ref bean="ieee1992PSS2AStabilizer"/>
			</list>
		</constructor-arg>
	</bean>	
</beans>
